<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.QuestionDetailsFragment">

<ScrollView
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="10dp"
            android:textColor="#FFF"
            android:text="QUESTION : "/>

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ADFFFFFF"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:text="Question: "/>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <FrameLayout
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                >

                <Button
                    android:id="@+id/prev_que"
                    android:backgroundTint="@color/purple_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Previous"/>
                <Button
                    android:id="@+id/next_que"
                    android:layout_gravity="bottom"
                    android:backgroundTint="@color/purple_500"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="next"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                >

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_op1"
                    android:layout_width="170dp"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#2196F3"
                    android:clickable="true"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/op1"
                        android:padding="12dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="option1"
                        android:textSize="20sp"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_op2"
                    android:layout_width="170dp"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#2196F3"
                    android:clickable="true"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/op2"
                        android:padding="12dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="option2"
                        android:textSize="20sp"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_op3"
                    android:layout_width="170dp"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#2196F3"
                    android:clickable="true"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/op3"
                        android:padding="12dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="option3"
                        android:textSize="20sp"/>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_op4"
                    android:layout_width="170dp"
                    android:layout_gravity="bottom|right"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#2196F3"
                    android:clickable="true"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/op4"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="option4"
                        android:textSize="20sp"/>
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#ADFFFFFF"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:text="BookMark this Question"/>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/bookmark_switch"
                    android:layout_margin="10dp"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


        </FrameLayout>

    </LinearLayout>

</ScrollView>




</LinearLayout>